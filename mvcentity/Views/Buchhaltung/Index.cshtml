@model IEnumerable<mvcentity.Models.Transaktion>

@{
    ViewBag.Title = "Index";
}

<style>
    #view-source {
        position: fixed;
        display: block;
        right: 0;
        bottom: 0;
        margin-right: 795px;
        margin-bottom: 645px;
        z-index: 900;
    }
</style>



<div class="mdl-grid mdl-grid--no-spacing">

    <div class="mdl-color--white mdl-shadow--4dp mdl-cell mdl-cell--12-col mdl-grid">
        <div>
            <h2 class="mdl-typography--headline">Finanzen <small> Einnahmen und Ausgaben</small></h2>
        </div>
        
    </div>
