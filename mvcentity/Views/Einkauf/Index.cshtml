@model IEnumerable<mvcentity.Models.Item>


@{
    ViewBag.Title = "Index";
}

<style>
    #view-source {
        position: fixed;
        display: block;
        right: 0;
        bottom: 0;
        margin-right: 810px;
        margin-bottom: 628px;
        z-index: 900;
    }
</style>



<div class="mdl-grid mdl-grid--no-spacing">

    <div class="mdl-color--white mdl-shadow--2dp mdl-cell mdl-cell--12-col mdl-grid">
        <div>
            <h2 class="mdl-typography--headline">Finanzen <small> Einnahmen und Ausgaben</small></h2>
        </div>

    </div>

    <div class="mdl-color--white mdl-shadow--2dp mdl-cell mdl-cell--12-col mdl-grid">
        <div style="padding:15px">
            <a href="@Url.Action("Create","Buchhaltung")" id="view-source"
               class="mdl-button mdl-js-button mdl-button--fab mdl-js-ripple-effect mdl-button--colored">
                <i class="material-icons">add</i>
            </a>
        </div>
    </div>


    <div class="mdl-color--white mdl-shadow--2dp mdl-cell mdl-cell--4-col">
        @using (Html.BeginForm())
        {
            @model mvcentity.Models.Item

            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Hinzufügen</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Anzahl, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Anzahl, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Anzahl, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
        </div>



        <div class="mdl-color--white mdl-shadow--2dp mdl-cell mdl-cell--8-col">
            <table class="mdl-data-table mdl-js-data-table mdl-shadow--2dp" style="padding:15px;margin:0 auto;font-size:13px">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Anzahl)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>

                    <th></th>
                </tr>

                @foreach (var item in Model)
            {
                    <tr>
                        <td></td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Anzahl)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>

                        <td>
                            @Html.ActionLink("Bearbeiten", "Edit", new { id = item.Id }) -
                            @Html.ActionLink("Details", "Details", new { id = item.Id }) -
                            @Html.ActionLink("Löschen", "Delete", new { id = item.Id })
                        </td>
                    </tr>
                }

            </table>
        </div>

        <div class="mdl-color--white mdl-shadow--2dp mdl-cell mdl-cell--12-col mdl-grid">
            <div style="height:110px;">

            </div>
        </div>

    </div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}